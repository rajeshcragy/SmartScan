<Window x:Class="SmartScanUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:SmartScanUI.Views"
        Title="Scanner Admin - ACME Corporation" Height="600" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <local:SidebarView Grid.Column="0"/>

        <!-- Main Content -->
        <StackPanel Grid.Column="1">
            <local:ScannerConfigView/>
            <local:AdvancedSettingsView/>

            <!-- Status Bar -->
            <Border Background="#F0F0F0" Padding="10" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="Green" Margin="0,0,5,0"/>
                    <TextBlock Text="All changes saved" Foreground="Green"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>